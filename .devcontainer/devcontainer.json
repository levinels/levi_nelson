{
    "name": "Flask + Vue Dev Container",
    "dockerFile": "Dockerfile",
    "context": ".",
    "forwardPorts": [5000, 8080],
    "postCreateCommand": "npm install -g @vue/cli && pip3 install flask",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "Vue.volar",
                "esbenp.prettier-vscode"
            ]
        }
    }
}
